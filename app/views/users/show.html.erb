<h2><%= @user.first_name %> <%= @user.last_name %>'s List</h2>

<table id="Products">
	<tr>
		<th>Product</th>
		<th># in stock</th>
		<th>Purchase</th>
	</tr>
	<% @user_products.each do |p| %>
		<% product = Product.find(p.product_id) %>
		<tr>
			<td><%= product.title %></td>
			<td class="center"><%= product.quantity %></td>
			<td class="center">
				<form action="http://outdoor-apparel.myshopify.com/cart/add" method="post">
					<input type="hidden" name="id" value="<%= product.variant_id %>"/>
					<input type="submit" value="Buy"/>
				</form>
			</td>
		</tr>
	<% end %>